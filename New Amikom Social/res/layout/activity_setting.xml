    <PreferenceCategory android:title="Calendar Setting" >

        <ListPreference
            android:name="id_calendar"
            android:entries="@array/id_cald"
            android:entryValues="@array/val_cald"
            android:key="id_calendar"
            android:summary="Set a calendar to synchronize"
            android:title="Select Calendar" />

        <Preference
            android:key="id_sync"
            android:summary="Synchronize Amikom Calendar and Device Calendar"
            android:title="Synchronize Calendar" />
    </PreferenceCategory>

</PreferenceScreen>